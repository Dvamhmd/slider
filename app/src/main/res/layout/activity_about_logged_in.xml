<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activityLoginTrue.AboutLoggedInActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables,VisualLintBounds">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_143sdp"
                android:contentDescription="@string/image"
                android:layout_gravity="center"
                android:src="@drawable/about_1"
                android:layout_marginTop="@dimen/_70sdp"/>

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_teh_idaman"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/about_1"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_reguler"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:lineHeight="@dimen/_20sdp"
                tools:ignore="UnusedAttribute" />

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="@dimen/_204sdp"
                android:layout_height="@dimen/_169sdp"
                android:contentDescription="@string/image"
                android:layout_gravity="center"
                android:src="@drawable/about_2"
                android:layout_marginTop="@dimen/_24sdp"/>


            <TextView
                android:id="@+id/desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/about_2"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_reguler"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:lineHeight="@dimen/_20sdp"
                tools:ignore="UnusedAttribute" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="@dimen/_204sdp"
                android:layout_height="@dimen/_169sdp"
                android:contentDescription="@string/image"
                android:layout_gravity="center"
                android:src="@drawable/about_3"
                android:layout_marginTop="@dimen/_24sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@color/softer_gray" />

            <TextView
                android:id="@+id/desc_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/about_3"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_reguler"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:lineHeight="@dimen/_20sdp"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/marketing_tehidaman_gmail_com"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:lineHeight="@dimen/_20sdp"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>



    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/back"
                android:contentDescription="@string/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_marginStart="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/about_app"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/text_main"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/dmsans_semi_bold" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>