<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activityLoginTrue.PaymentActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/back"
                android:contentDescription="@string/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_marginStart="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/pembayaran"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/text_main"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/dmsans_semi_bold" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp">

            <ImageView
                android:contentDescription="@string/image"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_160sdp"
                android:src="@drawable/happy_tea"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_8sdp"/>

            <!-- Rekening 1 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:contentDescription="@string/image"
                    android:id="@+id/bca_check"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/bullet_unchecked"
                    android:layout_gravity="start|center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bca"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/_10sdp" />





            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rekening_bca"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue_stroke"
                app:strokeWidth="@dimen/_1sdp"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rek_bca"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/_16sdp" />




            </com.google.android.material.card.MaterialCardView>




            <!-- Rekening 2 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:contentDescription="@string/image"
                    android:id="@+id/bri_check"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/bullet_unchecked"
                    android:layout_gravity="start|center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bri"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/_10sdp" />





            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rekening_bri"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue_stroke"
                app:strokeWidth="@dimen/_1sdp"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rek_bri"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/text_main"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/_16sdp" />




            </com.google.android.material.card.MaterialCardView>





            <!-- Rekening 3 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:contentDescription="@string/image"
                    android:id="@+id/dana_check"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/bullet_unchecked"
                    android:layout_gravity="start|center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dana"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/_10sdp" />





            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rekening_dana"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue_stroke"
                app:strokeWidth="@dimen/_1sdp"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0895402655123"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/_16sdp" />




            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/upload_bukti"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue_stroke"
                app:strokeWidth="@dimen/_1sdp"
                tools:ignore="TouchTargetSizeCheck">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/upload"
                        android:layout_gravity="center"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_bukti_transfer"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textColor="@color/text_gray"
                        android:layout_gravity="center" />




                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>







        </LinearLayout>





    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="@string/konfirmasi_pembayaran"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            tools:ignore="VisualLintButtonSize,TextContrastCheck,DuplicateSpeakableTextCheck" />


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>