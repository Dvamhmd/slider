<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activityLoginTrue.DetailProductInActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_270sdp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"/>


            <View
                android:layout_width="@dimen/_400sdp"
                android:layout_height="@dimen/_400sdp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/top_curve"
                android:translationY="-230dp"
                tools:ignore="VisualLintBounds" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_230sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/ss_org_core"
                    tools:ignore="ImageContrastCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/rp_8_000"
                            android:textColor="@color/text_bright_green"
                            android:textSize="@dimen/_16ssp"
                            tools:ignore="TextContrastCheck,VisualLintOverlap" />

                        <TextView
                            android:id="@+id/product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/orange_squash"
                            android:textColor="@color/text_main"
                            android:textSize="@dimen/_18ssp" />

                        <TextView
                            android:id="@+id/cup_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_48sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/_1_50_lbs"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="TextContrastCheck" />

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/favorite"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:contentDescription="@string/favorite"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/no_fav"
                        tools:ignore="TouchTargetSizeCheck" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/_5_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:contentDescription="@string/icon"
                        android:src="@drawable/stars"
                        tools:ignore="ImageContrastCheck" />


                </LinearLayout>


                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:justificationMode="inter_word"
                    android:text="@string/tt_machiatto_desc"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="UnusedAttribute,VisualLintLongText,TextContrastCheck" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@color/white"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp"
                    tools:ignore="TextSizeCheck">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/quantity"
                            android:textColor="@color/text_gray" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnMinus"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:contentDescription="@string/icon"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/min"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:background="@color/softer_gray" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/text_main"
                            android:textSize="@dimen/_20ssp"
                            android:translationY="@dimen/_2sdp"
                            tools:ignore="HardcodedText" />


                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:background="@color/softer_gray" />

                        <ImageView
                            android:id="@+id/btnPlus"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:clickable="true"
                            android:contentDescription="@string/icon"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/plus"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp">


                    <FrameLayout
                        android:id="@+id/goToCheckOut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/bg_gradient">


                        <TextView
                            android:id="@+id/order_now"
                            android:layout_width="@dimen/_170sdp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/order_now"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            tools:ignore="TextContrastCheck,TextSizeCheck" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_46sdp"
                            android:background="@color/white" />

                        <FrameLayout
                            android:id="@+id/add_to_cart"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            tools:ignore="TouchTargetSizeCheck">

                            <ImageView
                                android:id="@+id/cart"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_addtocart"
                                android:tint="@color/white"
                                tools:ignore="UseAppTint,ImageContrastCheck" />
                        </FrameLayout>

                    </FrameLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </FrameLayout>









    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:cardBackgroundColor="@color/top_curve"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_back" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>







</androidx.constraintlayout.widget.ConstraintLayout>