<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="0dp"
    android:layout_marginTop="@dimen/_16sdp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gambar_produk"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/image"
            android:src="@drawable/ms_blackcurrant"
            tools:ignore="ImageContrastCheck" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_12sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:text="@string/bubble_gum_creamy"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/text_main"
                android:fontFamily="@font/dmsans_bold"/>

            <TextView
                android:id="@+id/harga_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rp_10_000"
                android:textColor="@color/text_green"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/dmsans_medium"/>


        </LinearLayout>

        <!-- Tombol Hapus -->
        <androidx.cardview.widget.CardView
            android:id="@+id/delete_cart"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/soft_red"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/delete_cart"
                android:contentDescription="@string/icon"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>






</com.google.android.material.card.MaterialCardView>
