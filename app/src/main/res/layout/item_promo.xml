<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_18sdp"
    android:layout_marginEnd="@dimen/_18sdp">

    <ImageView
        android:id="@+id/promoImage"
        android:contentDescription="@string/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/promo_2"/>

    <TextView
        android:id="@+id/promoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/judul_promo"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/text_main"
        android:fontFamily="@font/dmsans_semi_bold"
        android:layout_marginTop="@dimen/_8sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/promoDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/deskripsi_promo"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/text_red"
            android:fontFamily="@font/dmsans_medium"
            android:layout_marginEnd="@dimen/_10sdp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_4sdp"
            android:orientation="horizontal" >

            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:layout_marginEnd="@dimen/_6sdp"/>

            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:layout_marginEnd="@dimen/_6sdp"/>

            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:layout_marginEnd="@dimen/_6sdp"/>

        </LinearLayout>

        <!-- Button untuk yuk coba -->

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonCoba"
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_20sdp"
            android:backgroundTint="@color/green"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/star"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/yuk_coba"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_16sdp" />




</LinearLayout>
