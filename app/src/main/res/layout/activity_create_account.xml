<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    tools:context=".CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_an_account"
            android:textSize="@dimen/_32ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold" />


        <!-- Layout Text field username -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:startIconDrawable="@drawable/ic_user"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/softest_gray"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:boxStrokeColor="@color/soft_gray"
            app:hintTextColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            app:startIconTint="@color/dark_gray"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/username"
                android:textColor="@color/dark_gray"
                android:inputType="text"
                android:paddingStart="@dimen/_32sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColorHint="@color/dark_gray"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Layout Text field email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:startIconDrawable="@drawable/email"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/softest_gray"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:boxStrokeColor="@color/soft_gray"
            app:hintTextColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            app:startIconTint="@color/dark_gray"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/dark_gray"
                android:paddingStart="@dimen/_32sdp"
                android:paddingEnd="@dimen/_16sdp"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>



        <!-- Layout Text field phone -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:startIconDrawable="@drawable/phone"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/softest_gray"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:boxStrokeColor="@color/soft_gray"
            app:hintTextColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            app:startIconTint="@color/dark_gray"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/phone_number"
                android:inputType="number"
                android:textColor="@color/dark_gray"
                android:paddingStart="@dimen/_32sdp"
                android:paddingEnd="@dimen/_16sdp"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>



        <!-- Layout Text field password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/dark_gray"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/dark_gray"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/softest_gray"
            app:boxStrokeColor="@color/soft_gray"
            app:hintTextColor="@color/soft_gray"
            android:textColorHint="@color/dark_gray"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/password"
                android:textColorHint="@color/dark_gray"
                android:inputType="textPassword"
                android:textColor="@color/dark_gray"
                android:paddingStart="@dimen/_32sdp"
                android:paddingEnd="@dimen/_16sdp"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Layout Text field confirm password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/dark_gray"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/dark_gray"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/softest_gray"
            app:boxStrokeColor="@color/soft_gray"
            app:hintTextColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:textColor="@color/dark_gray"
                android:paddingStart="@dimen/_32sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColorHint="@color/dark_gray"
                tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

        </com.google.android.material.textfield.TextInputLayout>





        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_44sdp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="@string/create_account"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            tools:ignore="VisualLintButtonSize,TextContrastCheck" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_an_account_2"
                android:textColor="@color/text_main"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_medium"/>

            <View
                android:layout_width="@dimen/_5sdp"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/go_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:textColor="@color/text_main"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_bold"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>



        </LinearLayout>












</LinearLayout>



</ScrollView>