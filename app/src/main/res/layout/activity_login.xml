<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    tools:context=".CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_back"
            android:textSize="@dimen/_32ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold" />


        <!-- Layout Text field username -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            app:startIconDrawable="@drawable/ic_user"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/softest_gray"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:boxStrokeColor="@color/soft_gray"
            app:hintTextColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            app:startIconTint="@color/dark_gray"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/username_or_email"
                android:textColorHint="@color/dark_gray"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/dark_gray"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_32sdp"
                android:paddingEnd="@dimen/_16sdp"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Layout Text field password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:startIconDrawable="@drawable/ic_lock"
            app:endIconMode="password_toggle"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/softest_gray"
            app:boxStrokeColor="@color/soft_gray"
            app:hintTextColor="@color/dark_gray"
            app:startIconTint="@color/dark_gray"
            app:endIconTint="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/password"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:inputType="textPassword"
                android:paddingStart="@dimen/_32sdp"
                android:paddingEnd="@dimen/_16sdp"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:fontFamily="@font/montserrat_medium"
            android:textAlignment="textEnd"
            android:textColor="@color/text_main"
            android:layout_marginTop="@dimen/_8sdp" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_44sdp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            tools:ignore="VisualLintButtonSize,TextContrastCheck" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_44sdp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_an_account_2"
                android:textColor="@color/text_main"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_medium"/>

            <View
                android:layout_width="@dimen/_5sdp"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textColor="@color/text_main"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_bold"/>



        </LinearLayout>















    </LinearLayout>



</ScrollView>